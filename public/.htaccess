# ----------------------------------------------------------------------
# Password protect stage
# ----------------------------------------------------------------------

SetEnvIf Host craft.collectiveoffice.com staging
AuthType Basic
AuthName "Under Construction"
AuthUserFile /home/138105/domains/craft.collectiveoffice.com/.htpasswd
Require valid-user
Order allow,deny
Allow from all
Deny from env=staging
Satisfy any


# ----------------------------------------------------------------------
# Remove "www." from beginning of URLs
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>


# ----------------------------------------------------------------------
# Craft Default
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Send would-be 404 requests to Craft
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/(favicon\.ico|apple-touch-icon.*\.png)$ [NC]
    RewriteRule (.+) index.php?p=$1 [QSA,L]
</IfModule>
